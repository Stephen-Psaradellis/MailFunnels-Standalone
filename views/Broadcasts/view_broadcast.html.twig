{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-12 col-lg-12">
            <div class="card-body">
                <div class="card">
                    <div class="row col-12">
                        <img class="mf_head_logo" src="{{ asset('mf-v1/images/mf_logo_text.png') }}"/>
                    </div>
                    <h2 class="text-center">{{ broadcastUserLink.broadcast.name }}</h2>
                    <p class="text-muted text-center">Created {{ broadcastUserLink.broadcast.dateCreated | ago }}</p>
                    <p class="mt-4 card-text text-center">
                        Description: {{ broadcastUserLink.broadcast.description }}
                    </p>
                    <div class="row">
                        <div class="col-12 col-lg-12 text-center">
                            <button type="button" class="btn btn-danger delete_broadcast_button"
                                    data-id="{{ broadcastUserLink.id }}">Delete
                            </button>
                        </div>
                    </div>
                    <div class="border-top pt-3 text-center">
                        <div class="row">
                            <div class="col-3">
                                <h6>Total Subscribers</h6>
                                <p>2,456</p>
                            </div>
                            <div class="col-3">
                                <h6>Emails Opened</h6>
                                <p>235</p>
                            </div>
                            <div class="col-3">
                                <h6>Emails Sent</h6>
                                <p>200</p>
                            </div>
                            <div class="col-3">
                                <h6>Emails Clicked</h6>
                                <p>210</p>
                            </div>
                        </div>
                    </div>
                    <div class="row col-12 col-lg-8">
                        <div class="row d-flex justify-content-center justify-content-center">


                            <div class="col-6 col-md-6 grid-margin grid-margin-md-0 d-flex flex-column align-items-center justify-content-center">
                                <div class="w-75 mx-auto">
                                    <div id="revenueCircle1" class="progressbar-js-circle"><svg viewBox="0 0 100 100" style="display: block; width: 100%;"><path d="M 50,50 m 0,-47 a 47,47 0 1 1 0,94 a 47,47 0 1 1 0,-94" stroke="#eee" stroke-width="6" fill-opacity="0"></path><path d="M 50,50 m 0,-47 a 47,47 0 1 1 0,94 a 47,47 0 1 1 0,-94" stroke="rgb(242,36,36)" stroke-width="6" fill-opacity="0" style="stroke-dasharray: 295.416, 295.416; stroke-dashoffset: 103.396;"></path></svg><div class="progressbar-text" style="position: absolute; left: 50%; top: 50%; padding: 0px; margin: 0px; transform: translate(-50%, -50%); color: rgb(0, 0, 0); font-size: 1.5rem;"></div></div>
                                </div>
                                <p class="mb-0 mt-2">Open Rate</p>
                                <h4 class="mb-0"><strong>65.00%</strong></h4>
                            </div>

                            <div class="col-6 col-md-6 grid-margin grid-margin-md-0 d-flex flex-column align-items-center justify-content-center border-left">
                                <div class="w-75 mx-auto">
                                    <div id="revenueCircle2" class="progressbar-js-circle"><svg viewBox="0 0 100 100" style="display: block; width: 100%;"><path d="M 50,50 m 0,-47 a 47,47 0 1 1 0,94 a 47,47 0 1 1 0,-94" stroke="#eee" stroke-width="6" fill-opacity="0"></path><path d="M 50,50 m 0,-47 a 47,47 0 1 1 0,94 a 47,47 0 1 1 0,-94" stroke="rgb(253,160,6)" stroke-width="6" fill-opacity="0" style="stroke-dasharray: 295.416, 295.416; stroke-dashoffset: 59.0832;"></path></svg><div class="progressbar-text" style="position: absolute; left: 50%; top: 50%; padding: 0px; margin: 0px; transform: translate(-50%, -50%); color: rgb(0, 0, 0); font-size: 1.5rem;"></div></div>
                                </div>
                                <p class="mb-0 mt-2">Click Rate</p>
                                <h4 class="mb-0"><strong>80.26%</strong></h4>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
    {% block modals %}

        <!-- START CONFIRM DELETE MODAL -->
        <!-- ~~~~~~~~~~~~~~~~~~ -->
        <div id="confirm_delete_modal" class="modal fade bs-example-modal-sm">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Confirm Broadcast Delete</h4>
                    </div>

                    <div class="modal-body">
                        <h4>Are you sure you want to delete this broadcast?</h4>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                        <button id="confirm_delete_broadcast_button" type="button" class="btn btn-success">Confirm
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- ~~~~~~~~~~~~~~~~ -->
        <!-- END CONFIRM DELETE MODAL -->
    {% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/pages/Broadcasts/view_broadcast.js') }}"></script>
{% endblock %}